{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container-fluid bg-dark ">
	<nav class="navbar navbar-expand-lg bg-dark sticky-top">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('home') }}">Logo</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="{{ path('app_register') }}" >Register</a>
					</li>
					<li class="nav-item">
						<a class="nav-link"href="{{ path('app_login') }}">Login</a>
					</li>
					<li class="nav-item">

						<a class="nav-link" href="{{ path('create_liste') }}">Create List</a>
					</li>
					<li class="nav-item">
						<a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
					</li>
				</ul>
			</div>
			{% if app.user %}
				<div style="text-align: center; display:flex">
					<span style="color: white;" >{{ app.user.name }}</span>
					<a class="button" href="{{ path('app_logout') }}">LOGOUT</a>
				</div>
			{% endif %}
		</div>
	</nav>
</div>
<div class="container-fluid">
	<div class="container">
		<h1 class="text-center">BABY LIST</h1>

	</div>
</div>
{% endblock %}
